
<div class="bg-white max-w-lg mt-4 m-auto px-2 rounded-lg">
  <h2 class="text-center py-6 text-2xl">Edit User</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="flex items-center mb-6">
      <%= f.label :email , class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4 w-1/3" %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="flex items-center mb-6">
      <%= f.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4 w-1/3" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="flex items-center mb-6">
      <%= f.label :password_confirmation, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4 w-1/3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="flex items-center mb-6">
      <%= f.label :current_password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4 w-1/3" %>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="flex justify-center pb-4">
      <div class="w-2/3">
        <%= f.submit "Update", class:"shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  <% end %>
</div>

